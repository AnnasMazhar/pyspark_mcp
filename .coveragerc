[run]
source = pyspark_tools
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */.venv/*
    */site-packages/*
    */conftest.py

[report]
# Ignore coverage parsing errors
ignore_errors = True
skip_covered = False
show_missing = True
precision = 1

# Lower the failure threshold
fail_under = 25

[html]
directory = htmlcov

[xml]
output = coverage.xml